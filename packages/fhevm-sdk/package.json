{
  "name": "@fhevm/universal-sdk",
  "version": "1.0.0",
  "description": "Framework-agnostic SDK for FHEVM confidential smart contracts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./vue": {
      "import": "./dist/vue/index.mjs",
      "require": "./dist/vue/index.js",
      "types": "./dist/vue/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/react/index.ts src/vue/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/react/index.ts src/vue/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "privacy",
    "blockchain",
    "ethereum",
    "zama",
    "sdk",
    "react",
    "vue",
    "framework-agnostic"
  ],
  "author": "FHEVM Community",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "ethers": "^6.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "dependencies": {
    "fhevmjs": "^0.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "ethers": "^6.10.0",
    "react": "^18.2.0"
  }
}
