{
  "name": "fhevm-universal-sdk",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK for building confidential smart contract frontends",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:packages && npm run install:examples",
    "install:packages": "npm install --workspace=packages/fhevm-sdk",
    "install:examples": "npm install --workspace=examples/nextjs-demo --workspace=examples/property-voting",
    "build": "npm run build:sdk",
    "build:sdk": "npm run build --workspace=packages/fhevm-sdk",
    "dev:nextjs": "npm run dev --workspace=examples/nextjs-demo",
    "dev:voting": "npm run dev --workspace=examples/property-voting",
    "compile:contracts": "npx hardhat compile",
    "deploy:sepolia": "npx hardhat run scripts/deploy.js --network sepolia",
    "test": "npx hardhat test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "keywords": [
    "fhevm",
    "zama",
    "fhe",
    "privacy",
    "encryption",
    "blockchain",
    "ethereum",
    "sdk"
  ],
  "author": "FHEVM Community",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "hardhat": "^2.19.4",
    "ethers": "^6.10.0",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.6",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "dotenv": "^16.3.1"
  },
  "dependencies": {
    "fhevmjs": "^0.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
