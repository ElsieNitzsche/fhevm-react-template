# ========================================
# fhEVM Network Configuration
# ========================================

# Network RPC URL
RPC_URL=


# Private Key for deployment
PRIVATE_KEY=


# ========================================
# Gateway Contract Configuration
# ========================================

# Number of pausers (should equal n_kms + n_copro)
# n_kms = number of registered KMS nodes
# n_copro = number of registered coprocessors
NUM_PAUSERS=4

# Pauser addresses (indexed from 0 to NUM_PAUSERS-1)
PAUSER_ADDRESS_0=0x1234567890123456789012345678901234567890
PAUSER_ADDRESS_1=0x2345678901234567890123456789012345678901
PAUSER_ADDRESS_2=0x3456789012345678901234567890123456789012
PAUSER_ADDRESS_3=0x4567890123456789012345678901234567890123

# Gateway Contract Address (after deployment)
# 留空使用独立模式（与原版行为完全相同）
GATEWAY_CONTRACT_ADDRESS=

# KMS Connector Configuration
# OLD: KMS_MANAGEMENT_CONTRACT_ADDRESS (deprecated)
# NEW: KMS_CONNECTOR_KMS_GENERATION_CONTRACT_ADDRESS
KMS_CONNECTOR_KMS_GENERATION_CONTRACT_ADDRESS=0xYourKMSGenerationContractAddress

# ========================================
# Host Contract Configuration
# ========================================

# Number of pausers for host contract
HOST_NUM_PAUSERS=4

# Host contract pauser addresses
HOST_PAUSER_ADDRESS_0=0x1234567890123456789012345678901234567890
HOST_PAUSER_ADDRESS_1=0x2345678901234567890123456789012345678901
HOST_PAUSER_ADDRESS_2=0x3456789012345678901234567890123456789012
HOST_PAUSER_ADDRESS_3=0x4567890123456789012345678901234567890123

# Host Contract Address
HOST_CONTRACT_ADDRESS=0xYourHostContractAddress

# ========================================
# Deprecated Variables (DO NOT USE)
# ========================================

# PAUSER_ADDRESS (replaced by indexed PAUSER_ADDRESS_[0-N])
# KMS_MANAGEMENT_CONTRACT_ADDRESS (replaced by KMS_CONNECTOR_KMS_GENERATION_CONTRACT_ADDRESS)

# ========================================
# Additional Configuration
# ========================================

# Chain ID
CHAIN_ID=11155111

# Gas Limit
GAS_LIMIT=8000000

# Gas Price (in Gwei)
GAS_PRICE=20

# Etherscan API Key (for verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here
